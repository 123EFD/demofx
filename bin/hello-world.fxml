<?xml version="1.0" encoding="UTF-8"?>

<!--
This is the FXML file. It defines the visual structure of the UI.
It must be placed in the same directory as FXMLExample.java for the
FXMLExample.java file to find it using getClass().getResource().
-->

<!--Method of creating obj.:
1. via FXML element, by importing the class, you can use its name as FXML element name
2. static factory method: call static valueOf(), inserting value attribute in FXML
FXMLLoader usually have no-arg constructor (e.g. new Label())
-->



<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox spacing="20" xmlns:fx="http://javafx.com/fxml" fx:controller="HelloWorldController">
    <children>
        <Label fx:id="label1" text="Line 1"/>
        <Label fx:id="label2" text="Line 2"/>
        <Button text="Click Me" onAction="#reactToClick"/>
    </children>       
</VBox>